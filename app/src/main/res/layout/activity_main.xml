<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/text_2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#111111"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="25dp"
            android:fontFamily="@font/fira_sans_semibold"
            android:gravity="center_horizontal"
            android:text="@string/hiljadarka"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />

        <LinearLayout
            android:id="@+id/hiljada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_shape"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/textview_hiljada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_semibold"
                android:text="@string/hiljada"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/input_hiljada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:imeOptions="actionDone"
                android:fontFamily="@font/fira_sans_semibold"
                android:inputType="number"
                android:text="@string/sto"
                android:textSize="48sp" />
        </LinearLayout>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-20dp"
            android:layout_marginBottom="-20dp"
            android:background="@drawable/circle_shape"
            android:drawableStart="@drawable/convert"
            android:focusable="false"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:rotation="90"
            android:textColor="@color/white"
            tools:ignore="" />

        <LinearLayout
            android:id="@+id/tisuca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_shape"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="30dp"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/textView_tisuca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fira_sans_semibold"
                android:text="@string/tisuca"
                android:textColor="#000000"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/input_tisuca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:ems="10"
                android:fontFamily="@font/fira_sans_semibold"
                android:inputType="number"
                android:text="@string/sto"
                android:textSize="48sp" />

        </LinearLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>